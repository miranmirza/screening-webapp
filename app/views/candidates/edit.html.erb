<style>
.exmna-nav {
  background-color: #3D2347;
}
.box {
  width: 60%;
  height: 30px;
  margin-bottom: 20px;
  padding-bottom: 60px;
  background-color: #53395C;
  color: #fff;
}
.box-right {
  margin-top: 10px;
  margin-right: 10px;
  float: right;
}

.center {
    margin-left: auto;
    margin-right: auto;
}
.navbar-center {
  color: #fff;
  display: inline-block;
  vertical-align: top;
  float: none;
  text-align: center;
}
.box-text {
  padding-top: 15px;
  padding-left: 15px;
  float: left;
}
.nav-text {
  padding-top: 10px;
  float: right;
  color: #fff;
}
.navbar-center {
  color: #fff;
  text-align: center;
  margin: 0px auto;
}
.right {
  float: right;
  margin-right: 10px;
  opacity: 0.7;
  color: #3D2347;
  font-weight: 400;
  font-size: 18px;
}
.left {
  margin-left: 10px;
  color: #3D2347;
  font-weight: 400;
  font-size: 18px;
}
.float-right {
  position: relative;
  float: right;
}
.justify-class {
  margin-left: 20%;
}
#skype {
  opacity: 0.7;
}
