<head>
    <%= stylesheet_link_tag "animations.css" %>
</head>

<body> 
<div> 
<nav class="navbar navbar-default navbar-static-top exmna-nav">
  <div class="container">
    <p class="navbar-text navbar-right"><div class="nav-text">Happy <%= Time.now.strftime('%A') %> <%= @current_user.firstname %>! <u><%= link_to "Logout", logout_path, class: "white_link" %></p></u></div>
  </div>
</nav>
</div>
<% if current_user.admin? %>
<p class="left slideUp"><i class="fa fa-angle-left"></i> <%= link_to "Screeners", users_path, class:"purple_link" %></p>
<p class="right slideUp"><i class="fa fa-user-plus"></i> <%= link_to "Add candidate", new_candidate_path, class:"purple_link" %></p><% end %><BR><BR>
</br>
<h3 class="justify-class slideUp">Pending screening</h3>
<% @pending_candidates.each do |candidate| %>

  <div class="box index_box center slideUp">
    <div class="box-text"><%= link_to display_candidate(candidate.firstname, candidate.lastname, candidate.city), candidate_path(candidate), class: "white_link" %> <span id="skype">skype</span> <a class="white_link" href="skype:<%= candidate.skype %>"><%= candidate.skype %></a>
  </br>
  <%= progress(candidate.status).to_s.humanize %></div></div>
<% end %>
</br>
<h3 class="justify-class slideUp">Completed screening</h1>

<% @approved_candidates.each do |candidate| %>
<div class="box_approved center slideUp">
    <div class="box-text"><%= link_to display_candidate(candidate.firstname, candidate.lastname, candidate.city), candidate_path(candidate), class: "white_link" %> <span id="skype">skype</span> <a class="white_link" href="skype:<%= candidate.skype %>"><%= candidate.skype %></a>
    </br>
    <%= progress(candidate.status).to_s.humanize %>
    </div></div></div>

<% end %>
</body>