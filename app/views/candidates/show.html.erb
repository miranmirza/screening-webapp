<head>
  <meta charset="utf-8">
  <%= stylesheet_link_tag "notes.css" %>
  <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <script>
  function init() {
    $(".row").css("height", $(window).height());
  }
  $(document).ready(function() {
    init();
  });
  </script>
</head>

<body>
  <div class="row">
    <div id="currNotes" class="col-lg-6">
        <nav id="candidateData" class="navbar navbar-default navbar-fixed-top">
          <div class="container">
              <%= link_to "<i class='fa fa-angle-left'></i> All Candidates".html_safe, candidates_path, class: "btn btn-default navbar-btn border-button borderless" %>
              <%= link_to "Edit", edit_candidate_path(@candidate), class:"btn btn-default navbar-btn right-button border-button" %>
          </div>
        </nav>
        <div id="candidateInfo">
        <%= @candidate.firstname %>
        <%= @candidate.lastname %>
        from <%= @candidate.city %>
        </br>
        skype: <a class="white_link" href="skype:<%= @candidate.skype %>"><%= @candidate.skype %></a>
        </br>
        Status: <%= @candidate.status.to_s.humanize %>
        </div>
        <div id="notesList">
          <% @notes.each do |note| %>
          <div class="note">
            <div class="note-meta clearfix">

              <div class="note-date-taken pull-left">
                <span class="note-date-taken-ago">
                  <%= note.created_at.strftime("%m/%d/%Y at %I:%M%p")  %>
                </span>
              </div>
              <div class="note-type pull-right">
                <%= note.note_type.to_s.humanize %> noted by
                <span class="note-noted-by note-noted-by-1">
                  <%= note.user.firstname.humanize %>
                </span>
              </div>
            </div>
            <div class="note-body">
              <p><%= note.comment %></p>
            </div>
          </div>
          <% end %>
        </div>
    </div>

    <div id="newNotes" class="col-lg-6">
      <nav id="candidateData2" class="navbar navbar-default navbar-fixed-top">
          <%= form_for Note.new, :url => notes_path(:candidate_id => @candidate.id) do |f| %>

                <%= f.submit "Save Note", class: "btn btn-default navbar-btn border-button" %>
                <div class = "radio">
                <%= radio_button_tag(:note_type, "pending") %>
                <%= label_tag(:type1, "Pending") %>
                <%= radio_button_tag(:note_type, "screen1") %>
                <%= label_tag(:type2, "Screen 1") %>
                <%= radio_button_tag(:note_type, "screen2") %>
                <%= label_tag(:type3, "Screen 2") %>
                <%= radio_button_tag(:note_type, "screen3") %>
                <%= label_tag(:type4, "Screen 3") %>
                <%= radio_button_tag(:note_type, "in_person") %>
                <%= label_tag(:type5, "In person") %>
                <% if current_user.admin? %>
                <%= radio_button_tag(:note_type, "approved") %>
                <%= label_tag(:type6, "Approved") %>
                <%= radio_button_tag(:note_type, "denied") %>
                <%= label_tag(:type7, "Denied") %>
                <% end %>
              </div>
            <%= hidden_field_tag :user_id, @current_user.id %>
            <%= text_area_tag(:comment, nil, size: "50x15", id: "comments", placeholder: "Type to enter a new note...") %>
        </div>
      </nav>
    </div>
    <% end %>
  </div>
</body>





